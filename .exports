# vim as default
export EDITOR="vim"

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG=en_US.UTF-8

export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# here's LS_COLORS
# github.com/trapd00r/LS_COLORS
command -v gdircolors >/dev/null 2>&1 || alias gdircolors="dircolors"
eval "$(gdircolors -b ~/.dircolors)"

NP=$(which node)
BP=${NP%bin/node} #this replaces the string '/bin/node'
LP="${BP}lib/node_modules"
export NODE_PATH="$LP"

# export JAVA_HOME=$(/usr/libexec/java_home)

# Localstack
export LOCALSTACK_URL=http://localhost:4566
export TF_VAR_aws_endpoint_url=$LOCALSTACK_URL
export TF_VAR_is_run_on_localstack=true
export TF_VAR_aws_profile=localstack

export TEMP=/tmp

export VOLTA_HOME="$HOME/.volta"
export PATH="$VOLTA_HOME/bin:$PATH"
